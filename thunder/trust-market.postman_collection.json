{
  "info": {
    "_postman_id": "trust-market-collection",
    "name": "Trust Market API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "postId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Seller 1\",\n  \"email\": \"seller1@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"seller\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "register"
          ]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"seller1@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "Create Post (multipart/form-data)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "title",
              "value": "Test Item",
              "type": "text"
            },
            {
              "key": "description",
              "value": "A test item description",
              "type": "text"
            },
            {
              "key": "price",
              "value": "49.99",
              "type": "text"
            },
            {
              "key": "images",
              "type": "file",
              "src": ""
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/posts",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "posts"
          ]
        }
      }
    },
    {
      "name": "Get Approved Posts",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/posts/approved",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "posts",
            "approved"
          ]
        }
      }
    },
    {
      "name": "Get Pending Posts (Admin)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/admin/pending-posts",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "admin",
            "pending-posts"
          ]
        }
      }
    },
    {
      "name": "Approve Post (Admin)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/admin/approve/{{postId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "admin",
            "approve",
            "{{postId}}"
          ]
        }
      }
    }
  ]
}
